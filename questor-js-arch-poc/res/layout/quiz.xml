<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/quizLayout"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  android:weightSum="1"
  >
    <android.webkit.WebView 
    	android:id="@+id/webViewQuizQuestion" 
    	android:layout_width="fill_parent" 
    	android:layout_marginTop="10px" 
    	android:layout_marginLeft="20px" 
    	android:layout_marginRight="20px"  
    	android:layout_height="160dp"
 		android:background="@drawable/ballon"
 		>    	
    </android.webkit.WebView>
    <EditText 
    	android:id="@+id/editQuizAnswer" 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
    	android:layout_marginLeft="20px" 
    	android:layout_marginRight="20px">
        <requestFocus></requestFocus>
    </EditText>
    <Button 
    	android:id="@+id/buttonSubmitQuizAnswer" 
    	android:layout_height="wrap_content" 
    	android:text="Antwort einloggen!" 
    	android:layout_width="fill_parent"
    	android:layout_marginLeft="20px" 
    	android:layout_marginRight="20px"
 		android:background="@drawable/quizbuttonanswer"    	
    >
    </Button>
    
</LinearLayout>
